{
    "name": "solana-tx-policy",
    "version": "0.1.0",
    "description": "Declarative transaction policy validation for Solana",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src --max-warnings 0",
        "format": "prettier --write src",
        "format:check": "prettier --check src",
        "check-types": "tsc --noEmit",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@solana/kit": "^5.0.0",
        "@solana-program/system": "^0.10.0",
        "@solana-program/token": "^0.9.0",
        "@solana-program/token-2022": "^0.6.1",
        "@solana-program/compute-budget": "^0.11.0",
        "@solana-program/memo": "^0.10.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.7.3",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0",
        "vitest": "^4.0.13"
    },
    "keywords": [
        "solana",
        "transaction",
        "policy",
        "validator",
        "remote-signer"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/solana-tx-policy"
    }
}
