{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**/*.ts", "test/**/*.ts", "vitest.config.ts"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
